<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PROFILE CONTENT -->
    <ScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Header -->
            <TextView
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="115dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                android:contentDescription="Profile Image"/>

            <TextView
                android:text="Jose Mallo"
                android:textSize="29sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Mallojose791@gmail.com"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Become an Publisher"
                android:textSize="14sp"
                android:layout_marginBottom="46dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"/>

            <!-- Account Settings -->
            <TextView
                android:text="Account settings"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/personalInfo"
                style="@style/ProfileItem"
                android:text="Personal information"/>

            <TextView
                android:id="@+id/timeSpent"
                style="@style/ProfileItem"
                android:text="Time spent"/>

            <TextView
                android:id="@+id/following"
                style="@style/ProfileItem"
                android:text="Following"/>

            <!-- Help & Support -->
            <TextView
                android:id="@+id/notifications"
                style="@style/ProfileItem"
                android:text="Notifications" />

            <TextView
                android:text="Help and Support"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/privacy"
                style="@style/ProfileItem"
                android:text="Privacy policy"/>

            <TextView
                android:id="@+id/terms"
                style="@style/ProfileItem"
                android:text="Terms and Conditions"/>

            <TextView
                android:id="@+id/faq"
                style="@style/ProfileItem"
                android:text="FAQ and Help"/>

            <TextView
                android:id="@+id/logout"
                style="@style/logoutitem"
                android:text="Log out"
                android:textColor="@android:color/holo_red_dark"/>

        </LinearLayout>
    </ScrollView>

    <!-- FLOATING BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/layout"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>